            <link rel="alternate icon" href="{{ asset('favicon.ico') }}">
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}"/>
